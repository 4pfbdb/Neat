{
  "name": "Neat",
  "version": "1.0.0",
  "images": [
    {
      "variable": "logo",
      "label": "Logo",
      "description": "Adds your logo to the header"
    }
  ],
  "image_sets": [
    {
      "variable": "slideshow_images",
      "label": "Slideshow",
      "description": "This is a slideshow"
    },
    {
      "variable": "lookbook_images",
      "label": "Lookbook",
      "description": "This is a lookbook"
    }
  ],
  "fonts": [
    {
      "variable": "header_font",
      "label": "Header Font",
      "default": "Dosis"
    },
    {
      "variable": "text_font",
      "label": "Text Font",
      "default": "Open Sans"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "variable": "header_color",
      "label": "Header color",
      "default": "#ffffff"
    },
    {
      "variable": "feature_text_color",
      "label": "Text",
      "default": "#ffffff"
    },
    {
      "variable": "text_color",
      "label": "Text",
      "default": "#1b1b1b"
    },
    {
      "variable": "link_color",
      "label": "Links",
      "default": "#919191"
    },
    {
      "variable": "link_hover",
      "label": "Link Hover",
      "default": "#1b1b1b"
    },
    {
      "variable": "border_color",
      "label": "Borders",
      "default": "#e2e2e2"
    },
    {
      "variable": "error_color",
      "label": "Errors",
      "default": "#f25749"
    }
  ],
  "options": [
    {
      "variable": "feature_header",
      "label": "Feature header",
      "type": "text",
      "description": "Feature header for homepage"
    },
    {
      "variable": "feature_subheader",
      "label": "Feature subheader",
      "type": "text",
      "description": "Feature subheader for homepage"
    },
    {
      "variable": "feature_text",
      "label": "Feature text",
      "type": "text",
      "description": "Feature paragraph for products on homepage"
    },
    {
      "variable": "collections",
      "label": "Enable collections",
      "type": "boolean",
      "default": false,
      "description": "Use category collections instead of the traditional product listing page"
    },
    {
      "variable": "product_image_size",
      "label": "Product image size",
      "type": "select",
      "options": [["Small", "thumb"], ["Medium", "medium"], ["Large", "large"], ["Huge", ""]],
      "default": "large",
      "description": "The size of your product images"
    },
    {
      "variable": "nav_items",
      "label": "Navigation items",
      "type": "select",
      "options": "1..6",
      "default": 2,
      "description": "The number of links show in the main navigation."
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 9,
      "description": "The number of products shown at a time on the Products page"
    },
    {
      "variable": "show_inventory_bars",
      "label": "Show inventory bars",
      "type": "boolean",
      "default": true,
      "description": "Shows a product's inventory amounts (when using inventory tracking)",
      "requires": "inventory"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": false,
      "description": "Shows the product search area"
    },
    {
      "variable": "share_buttons",
      "label": "Show social buttons",
      "type": "boolean",
      "default": true,
      "description": "Adds Facebook, Twitter, and Pinterest buttons to Product pages"
    },
    {
      "variable": "twitter_link",
      "label": "Twitter Link",
      "type": "text",
      "description": "Ex: http://twitter.com/bigcartel"
    },
    {
      "variable": "facebook_link",
      "label": "Facebook Link",
      "type": "text",
      "description": "Ex: http://facebook.com/bigcartel"
    },
    {
      "variable": "tumblr_link",
      "label": "Tumblr Link",
      "type": "text",
      "description": "Ex: http://tumblr.com/bigcartel"
    }
  ]
}
